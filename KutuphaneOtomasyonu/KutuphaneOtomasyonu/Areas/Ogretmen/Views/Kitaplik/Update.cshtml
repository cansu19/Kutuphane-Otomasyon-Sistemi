@model KitaplikUpdateDto

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Kitaplık Yönetimi /</span> Kitaplık Güncelleme</h4>

    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <h5 class="card-header"></h5>
                @{
                    var message = TempData["Message"];
                    var messageType = TempData["MessageType"];
                }

                @if (message != null)
                {
                    <div class="alert alert-@messageType alert-dismissible fade show" role="alert">
                        @message
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form asp-controller="Kitaplik" asp-action="Update" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="card-body">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group">
                            <label asp-for="Tur" for="defaultFormControlInput" class="form-label">Kitaplık Adı</label>
                            <input asp-for="Tur" type="text"
                                   class="form-control"
                                   id="defaultFormControlInput"
                                   placeholder="Kitaplık adını giriniz."
                                   aria-describedby="defaultFormControlHelp" />
                            <div id="defaultFormControlHelp" class="form-text">
                            </div>

                            <div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary m-2">Kaydet</button>
                                </div>
                            </div>
                        </div>
                </form>

            </div>

        </div>
    </div>
</div>
</div>

