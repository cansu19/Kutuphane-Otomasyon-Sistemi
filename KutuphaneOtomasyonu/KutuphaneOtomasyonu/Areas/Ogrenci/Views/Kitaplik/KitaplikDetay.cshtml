@using X.PagedList;
@using X.Web.PagedList;
@model IPagedList<KitapDto>
@{
    Layout = "~/Areas/Ogrenci/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Kitap Adı</th>
                        <th>Yazar</th>
                        <th>Yayınevi</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Kitap Adı</th>
                        <th>Yazar</th>
                        <th>Yayınevi</th>
                        <th>İşlemler</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var kitap in Model)
                    {
                        <tr>
                            <td>@Html.ActionLink(kitap.Ad, "KitapDetay", "Ogrenci", new { area = "Ogrenci", id = kitap.Id }, null)</td>
                            <td>@kitap.Yazar</td>
                            <td>@kitap.Yayınevi</td>
                            <td>
                                <div class="d-flex">
                                    <a href="@Url.Action("KitapGorus", "Kitaplik", new { id = kitap.Id })" class="btn btn-primary btn-sm me-2">Görüşler</a>
                                    <form method="post" action="@Url.Action("Add", "Ogrenci", new { area = "Ogrenci" })">
                                        <input type="hidden" name="kitapId" value="@kitap.Id" />
                                        <button type="submit" class="btn btn-success btn-sm">Seç</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="d-flex justify-content-center mt-4">
        @Html.PagedListPager(Model, page => Url.Action("KitaplikDetay", new { page }))
    </div>
</div>
