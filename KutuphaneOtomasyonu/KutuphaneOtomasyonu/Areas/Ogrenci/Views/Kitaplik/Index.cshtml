@using X.PagedList;
@using X.Web.PagedList;
@model IPagedList<KitaplikDto>
@{
    Layout = "~/Areas/Ogrenci/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Kitap Türü</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Kitap Türü</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var kitaplik in Model)
                    {
                        <tr>
                            <td>@Html.ActionLink(kitaplik.Tur, "KitaplikDetay", "Kitaplik", new { area = "Ogrenci", id = kitaplik.Id }, null)</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    <div class="d-flex justify-content-center mt-4">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>
